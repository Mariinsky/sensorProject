<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NewTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/pink</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/beantown</item>
    </style>

    //style for button
    <style name="Widget.MyApp.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/lightPink</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="elevation">2dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    //style for text input
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Style attributes -->
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <!-- Theme attributes -->
        <item name="android:textColorHint">#80000000</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    //style for tab bar
    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>
</resources>